<h1>Welcome to the Central Cat Database</h1>
<h1>The database currently contains {{count}} cats</h1>

<div>
  <form action="/cats">
      <input type="submit" value="List Cats">
  </form>
  <form action="/cats/new">
      <input type="submit" value="Create New Cat">
  </form>
  <form action="/cats/delete/old">
      <input type="submit" value="Remove Oldest Cat">
  </form>
  <form action="/cats/black">
      <input type="submit" value="Find cats that are black or have black hats">
  </form>
</div>

<div>
  <h2>{{action}}</h2>
  <ul>
  {{#each cats}}
    <li>{{this.name}}
      <ul>
        <li>Age: {{this.age}}</li>
        <li>Color: {{this.color}}</li>
        <li>Hat:
          <ul>
            <li>Type: {{this.hat.type}}</li>
            <li>Color: {{this.hat.color}}</li>
          </ul>
        </li>
      </ul>
    </li>
  {{/each}}
  </ul>
</div>