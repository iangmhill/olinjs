<h2> Ingredients </h2>
<div id="ingredients-list">
{{#each ingredients}}
  <div class="ingredient {{this.inStockClass}}">
    <span class="name">
      {{this.name}}
    </span>
    <span class="stock">
      {{this.inStockNotation}}
    </span>
    <span class="right">
      <button class="edit-ingredient" value="{{this.id}}">Edit</button>
      <button class="out-of-stock-ingredient" value="{{this.id}}">Out of stock</button>
    </span>
    <span class="price right">
      {{this.price}}
    </span>
  </div>
{{/each}}
</div>
<h3> Add Ingredient </h3>
<form id="create-ingredient-form" class="ingredient-form" action="api/createIngredient" method="POST">
  <div class="label">Name:</div><input type="text" name="name"/>
  <div class="label">Price:</div><input type="number" step="any" name="price"/>
  <input class="submit-button" type="submit" value="Submit">
</form>
<script type="text/javascript" src="javascripts/ingredients.js"></script>
